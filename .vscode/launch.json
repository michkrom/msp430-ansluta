    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Remote Debug",
            "type": "cppdbg",
            "request": "launch",
            "miDebuggerPath": "msp430-gdb",
            "miDebuggerServerAddress": "localhost:2000",
            "program": "${workspaceRoot}/bin/firmware.elf",
            "-preLaunchTask": "Start Debug Server",
            "cwd": ".", 
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb"
            }
 }        
    ]
}