{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "make flash-target",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "make debug-target",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}